-- LBG wind parameters (see Steidel et al. 2010)
r_inner   =  1.0      -- inner boundary radius, in kpc 
r_outer   = 100.0     -- outer boundary radius, in kpc
r_emit    =  0.5      -- boundary to emit from

LBG_gamma = 0.5       -- Covering fraction parameter
LBG_fc = 0.6          -- Maximum covering fraction (for MgII 2796)
LBG_vmax =  8e7       -- cm/s
LBG_alpha = 1.3

vdoppler  = 20e5        -- cm/s
vinteract = 1e5        -- cm/s
